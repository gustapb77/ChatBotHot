            "show_vip_offer": False,
            "show_messages": False,
            "show_offers": False
        })

def display_chat_history():
    for msg in st.session_state.messages:
        with st.chat_message(msg["role"]):
            st.write(msg["content"])
            if msg.get("has_audio"):
                audio_player(AUDIO_FILE)

